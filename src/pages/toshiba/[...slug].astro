---
import { getCollection } from "astro:content";
import MainLayout from "@/layouts/MainLayout.astro";

export async function getStaticPaths() {
  const contentEntries = await getCollection("toshiba");
  return contentEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const {
  id,
  title,
  desc,
  img,
  images,
  alt,
  author,
  reviewBody,
  ratingValue,
  features,
  publishedTime,
} = entry.data;
const imageUrl = img.src;
const structuredData = {
  "@context": "https://schema.org/",
  "@type": "Product",
  name: title,
  image: `${Astro.url.origin}/${imageUrl}`,
  description: desc,
  brand: {
    "@type": "Brand",
    name: "Toshiba",
  },
  offers: {
    "@type": "Offer",
    availability: "https://schema.org/InStock",
    price: "0", // Update with actual price
    priceCurrency: "AED", // Update per region
    areaServed: ["AE", "SA", "BH", "KW", "OM", "QA"], // Middle Eastern countries
    warranty: "3 year manufacturer replacement warranty"
  },
  aggregateRating: {
    "@type": "AggregateRating",
    ratingValue: "4.9",
    reviewCount: "50",
  },
  review: [
    {
      "@type": "Review",
      author: author,
      datePublished: publishedTime,
      reviewBody: reviewBody,
      reviewRating: {
        "@type": "Rating",
        ratingValue: ratingValue,
        bestRating: "5",
      },
    },
  ],
  additionalProperty: [
    {
      "@type": "PropertyValue",
      name: "Product Line",
      value: "Surveillance Hard Drive"
    },
    {
      "@type": "PropertyValue",
      name: "Warranty",
      value: "3 Year Replacement"
    }
  ]
};

// Add meta tags in the MainLayout component
const metaTags = [
  { name: "title", content: `${title} | Toshiba Surveillance Hard Drive UAE` },
  { name: "description", content: `${desc} - 3 Year Warranty. Available in UAE, Saudi Arabia, Dubai, and across Middle East.` },
  { name: "keywords", content: "Toshiba Surveillance Hard Drive, CCTV Storage, Security Storage, Dubai, UAE, Saudi Arabia, Middle East, 3 Year Warranty" },
  { property: "og:locale:alternate", content: "ar_SA" },
  { property: "og:locale", content: "en_US" }
];
---

<MainLayout title={title} sd={structuredData} metaTags={metaTags}>
  <main class="container mx-auto px-4 py-8">
    <section class="hero-section relative mb-8 overflow-hidden">
      <div class="relative z-10 py-16 text-center text-white">
        <h1 class="text-4xl font-bold">{title}</h1>
        <p class="mt-2 text-lg">{desc}</p>
      </div>
    </section>

    <div class="navigation-container mb-6">
      <a href="/toshiba" class="back-button">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="back-icon"><path d="M19 12H5M12 19l-7-7 7-7"></path></svg
        >
        <span>Back to Content Collection</span>
      </a>
    </div>

    <div class="relative">
      <article class="card">
        <div class="card-inner flex flex-col gap-6 md:flex-row">
          <div class="card-image w-full px-0 sm:px-4 md:w-1/2">
            {
              img && (
                <div class="image-container relative">
                  <img
                    src={img.src}
                    alt={alt}
                    width={img.width}
                    height={img.height}
                    class="full-width-mobile active-image w-full rounded-lg shadow-md"
                  />

                  <button class="nav-arrow prev-arrow absolute left-2 top-1/2 z-10 -translate-y-1/2 rounded-full border border-gray-100 bg-white/90 p-2 shadow-lg hover:bg-white">
                    <svg
                      class="h-6 w-6 text-gray-800"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 19l-7-7 7-7"
                      />
                    </svg>
                  </button>
                  <button class="nav-arrow next-arrow absolute right-2 top-1/2 z-10 -translate-y-1/2 rounded-full border border-gray-100 bg-white/90 p-2 shadow-lg hover:bg-white">
                    <svg
                      class="h-6 w-6 text-gray-800"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                  </button>
                </div>
              )
            }
            {
              images && images.length > 0 && (
                <div class="hidden-images hidden">
                  {images.map((image, index) => (
                    <img
                      src={image.src}
                      alt={`${alt} ${index + 1}`}
                      width={image.width}
                      height={image.height}
                      class="full-width-mobile w-full rounded-lg shadow-md"
                      loading="lazy"
                    />
                  ))}
                </div>
              )
            }
          </div>

          <div class="card-content w-full md:w-1/2">
            <h2 class="mb-2 text-2xl font-bold">{title}</h2>
            <p class="mb-4 text-gray-700">{desc}</p>
            {
              features && features.length > 0 && (
                <div class="mt-6">
                  <h3 class="mb-2 text-xl font-semibold">Key Features:</h3>
                  <ul class="list-disc pl-6 text-gray-700">
                    {features.map((feature) => (
                      <li>{feature}</li>
                    ))}
                  </ul>
                </div>
              )
            }
          </div>
        </div>

        <div class="share-container mt-6 border-t border-gray-100 py-3">
