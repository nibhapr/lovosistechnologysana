    bgColor: "from-orange-500 to-red-600"
  },
  {
    title: "Team Building",
    description: "Regular team events, retreats, and collaborative activities to foster connections",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
    </svg>`,
    bgColor: "from-orange-500 to-red-600"
  }
];

const structuredData = {
  "@context": "https://schema.org",
  "@graph":careers.map((p) => {
      return {
    "@type": "JobPosting",
      title: p.title,
      description: p.descriptions,
      identifier: {
        "@type": "PropertyValue",
        name: "Lovosis Technology LLC",
        value: 1021
      },
      datePosted: p.datePosetd,
      validThrough: p.validThrough,
      employmentType: p.type,

      jobLocation: {
        "@type": "Place",
        address: {
          "@type": "PostalAddress",
          streetAddress: "Street Address",
          addressLocality: p.location,
          addressRegion: "Karnataka",
          postalCode: "560090",
          addressCountry: "IN"
        }
        },
        hiringOrganization: {
        "@type": "Organization",
        name: "Lovosis Technology LLC",
        sameAs: "https://www.lovosis.com",
        logo: "https://lovosis.come.com/pictures/logo.png",
        url: "https://www.lovosis.com",
        
        contactPoint: {
          "@type": "ContactPoint",
          telephone: "+971509162488",
          contactType: "Recruitment",
          areaServed: "IN",
          availableLanguage: "English"
        
      },
      
      },
      qualifications: p.qualifications,
      skills: p.skills,
      };
    }),
  
};
---

<MainLayout title={pageTitle} sd={structuredData} description= {description}>
  <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full">
    <!-- Hero Section -->
    <div class="text-center bg-gradient-to-r from-blue-600 to-indigo-700 p-5 md:p-16 rounded-2xl mb-20">
      <h1 class="text-balance animate-fade-in-left text-3xl md:text-6xl md:leading-tight font-bold tracking-tight dark:text-white">
        Join Our Team
      </h1>
      <p class="mt-4 text-xl text-white/90 max-w-2xl mx-auto dark:text-white">
        Be part of something extraordinary. Help us shape the future of technology in Dubai and beyond.
      </p>
    </div>



    <!-- Current Openings -->
    <div class="mt-20">
        <h2 class="text-3xl font-bold text-center mb-12 dark:text-white">Current Opportunities</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {careers.map((job) => (
            <div class="bg-white dark:bg-neutral-800 rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
              <h3 class="text-xl font-semibold text-gray-800 dark:text-white">{job.title}</h3>
              <div class="flex items-center gap-2 mt-2 text-gray-600 dark:text-gray-300">
                <span>{job.type}</span>
                <span>•</span>
                <span>{job.location}</span>
              </div>
              <div class="mt-4 flex flex-wrap gap-2">
                {job.skills.map((skill) => (
                  <span class="px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-white">
                    {skill}
                  </span>
                ))}
              </div>
              <div class="mt-4">
                <h4 class="font-medium text-gray-700 dark:text-gray-300">Qualifications:</h4>
                <p class="text-gray-600 dark:text-gray-400 text-sm mt-1">{job.qualifications}</p>
              </div>
              <a 
                href={`mailto:${job.email}?subject=Job Application - ${job.title}`}
                class="mt-6 block w-full from-orange-500 to-red-600 bg-gradient-to-r text-white py-2 rounded-lg transition-colors text-center"
              >
                Apply Now
              </a>
            </div>
          ))}
        </div>
      </div>






<!-- Benefits Section -->
<div class="mt-32 relative">
  <div class="absolute inset-0 bg-gradient-to-b from-gray-50/50 to-white dark:from-neutral-900/50 dark:to-neutral-900 -z-10"></div>
  <div class="container mx-auto px-4">
    <div class="text-center max-w-2xl mx-auto mb-16">
      <h2 class="text-4xl font-bold mb-4 bg-gradient-to-r from-blue-600 to-indigo-600 inline-block text-transparent bg-clip-text dark:text-white">
        Why Join Lovosis?
      </h2>
      <p class="text-gray-600 dark:text-gray-400">
        We offer more than just a job - we provide a career with growth opportunities and fantastic benefits
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {benefits.map((benefit) => (
        <div class="group bg-white dark:bg-neutral-800 rounded-xl p-8 shadow-md relative overflow-hidden hover:shadow-lg transition-shadow duration-300 mb-10">
          <div class={`absolute top-0 left-0 w-2 h-full ${benefit.bgColor} bg-gradient-to-b rounded-l-xl`}></div>
          <div class="relative">
            <div class="mb-6 text-blue-600 dark:text-blue-400 transition-transform duration-300 group-hover:scale-110">
              <Fragment set:html={benefit.icon} />
            </div>
            <h3 class="text-xl font-bold mb-3 text-gray-900 dark:text-white">
              {benefit.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              {benefit.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>





    <!-- Call to Action -->
    <div class="mt-32 text-center">

      <h2 class="text-4xl md:text-5xl font-bold mb-6 bg-gradient-to-r from-blue-600 to-indigo-600 inline-block text-transparent bg-clip-text dark:text-white">
      Don't see a role that fits?
    </h2>
    <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 mb-12 max-w-2xl mx-auto">
      We're always looking for talented individuals who are passionate about technology and innovation. 
      Share your story with us, and let's explore how we can grow together.
    </p>


      <a 
      href="mailto:sales@lovosis.com?subject=Job Application - Resume Submission"
      class="inline-block from-orange-500 to-red-600 bg-gradient-to-r text-white px-8 py-3 rounded-lg text-lg transition-colors"
    >
      Send Your Resume
    </a>
    </div>
  </section>
</MainLayout>


