const pageTitle: string = `Careers | ${SITE.Title + " - " + "Join Our Team at Lovosis Technology"}`;
const description ="Join Lovosis Technology, the leading security system distributor in Dubai & the Middle East. We're hiring IT staff for our Bangalore office. Apply now!";
